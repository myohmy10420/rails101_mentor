<div class="col-md-12">
  <h2 class="text-center"> 我發表過的文章 </h2>
  <table class="table">
    <thead>
      <tr>
        <th> Content </th>
        <th> Group Name </th>
        <th> Last Update </th>
        <th> Status </th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> <%= post.content %> </td>
          <td> <%= post.group.title %> </td>
          <td> <%= post.updated_at %> </td>
          <td> <%= post.status %> </td>
          <td> <%= render_post_status_note(post) %> </td>
          <td>
            <% if post.status_editable? %>
              <%= link_to('Edit', edit_account_post_path(post), class: "btn btn-default btn-xs") %>
              <%= link_to('Cancel', account_post_path(post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default btn-xs") %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
